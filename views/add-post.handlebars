<main class="form-signin text-center">
    <h3 class="text-primary">New Post</h3>
    <form class="card-body" id="add-post-form">
        <div class="form-floating ">
            <label for="post-title" class="form-label" ></label>
            {{!-- Name of Post, value used in JavaScript --}}
            <input type="text" id="post-title" name="post-title" class="form-input w-100" autofocus="true" placeholder="Title"/>
        </div>

        <div class="form-floating ">
            {{!-- Content of Post, value used in JavaScript --}}
            <label class="form-label" for="content" ></label>
            <textarea id="content" name="content" class="form-input h-25 w-100" aria-label="With textarea"
                autofocus="true" placeholder="What's on your mind?"></textarea>
        </div>

        <button type="submit" class="w-100 btn-lg btn-info ">Create</button>
    </form>
    
</main>

<script src="/js/add-post.js"> </script>

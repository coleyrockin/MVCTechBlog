<main class="card">
    <h3 class="card-header">New Post</h3>
    <form class="card-body new-post-form" id="add-post-form">
        <div class="form-floating mb-3">Title
        <label for="post-title" class="form-label" ></label>
        <input id="post-title" name="post-title" type="text" placeholder="Title here" class="form-input w-100" />
        </div>

        <div class="form-floating mb-3">Content Post
         <label class="form-label" for="content" ></label>
        <textarea name="content" type="text" placeholder="What's on your mind???" class="form-input w-100" style="height: 100px"/></textarea>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-info mb-3">Create Post</button>
    </form>
</div>
</main>
<script src="/js/add-post.js"></script>
